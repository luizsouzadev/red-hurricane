<div class="d-flex justify-content-center align-items-center vh-100 bg-hurricane">
  <div class="container-sm py-5" style="max-width: 600px;">
    <div class="card shadow rounded p-4 hurricane-card">
      <div class="d-flex justify-content-center align-items-center mb-4">
        <%= image_tag "main-logo.png", alt: "Red Hurricane Logo", class: "img-fluid me-2", style: "max-width: 50px;" %>
        <h1 class="mb-0 hurricane-title">Red Hurricane</h1>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
          <h2 class="mb-0 me-2 hurricane-city"><%= @tempo[:cidade] %></h2>
          <img src="<%= @tempo[:bandeira_url] %>" alt="Bandeira de <%= @tempo[:pais] %>" class="img-fluid" style="max-width: 30px;">
        </div>
        <div class="d-flex align-items-center">
          <img src="<%= @tempo[:icone_url] %>" alt="Ícone do clima" class="img-fluid me-2" style="max-width: 50px;">
          <span class="hurricane-desc"><%= @tempo[:descricao] %></span>
        </div>
      </div>

      <div class="d-flex justify-content-between align-items-center">
        <div class="text-center">
          <h1 class="hurricane-temp"><%= @tempo[:temperatura] %>°C</h1>
        </div>
        <div class="text-center">
          <i class="bi bi-thermometer-half hurricane-icon"></i>
          <p class="mb-0 hurricane-label">Sensação</p>
          <p class="hurricane-value"><%= @tempo[:sensacao_termica] %>°C</p>
        </div>
        <div class="text-center">
          <i class="bi bi-droplet hurricane-icon"></i>
          <p class="mb-0 hurricane-label">Umidade</p>
          <p class="hurricane-value"><%= @tempo[:umidade] %>%</p>
        </div>
        <div class="text-center">
          <i class="bi bi-wind hurricane-icon"></i>
          <p class="mb-0 hurricane-label">Vento</p>
          <p class="hurricane-value"><%= @tempo[:vento] %> m/s</p>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= link_to 'Nova Consulta', tempo_path, class: 'btn hurricane-btn' %>
      </div>
    </div>
  </div>
</div>