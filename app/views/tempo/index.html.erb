<div class="d-flex justify-content-center align-items-center vh-100 bg-hurricane">
  <div class="container-sm py-5" style="max-width: 600px;">
    <div class="card shadow rounded p-4 hurricane-card">
      <div class="d-flex justify-content-center align-items-center mb-4">
        <%= image_tag "main-logo.png", alt: "Red Hurricane Logo", class: "img-fluid me-2", style: "max-width: 50px;" %>
        <h1 class="mb-0 hurricane-title">Red Hurricane</h1>
      </div>

      <%= form_with url: tempo_path, method: :get, local: true, class: "d-flex align-items-center gap-3" do |form| %>
        <div class="flex-grow-1">
          <%= form.text_field :cidade, placeholder: "Cidade", required: true, class: "form-control hurricane-input" %>
        </div>
        <%= form.button type: "submit", class: "btn hurricane-btn" do %>
          <i class="bi bi-search"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>